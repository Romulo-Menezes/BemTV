@layout('layouts/main')
@set('title', 'Home')

@section('body')
@!alertSuccess()
@!alertError()

<div class="flex flex-wrap items-center justify-center">
  @each((row, i) in videos)
  @!video.card({
    id: row.id,
    url_code: row.url_code,
    title: row.title,
    creator: `${row.author.first_name} ${row.author.last_name}`,
    time: row.create_at
  })
  @endeach
</div>
<div class="mb-6">
  @!pageNav({data: videos, sideLimit: 3, limit: 7})
</div>
@endsection
